{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/interfaces": [
        "libs/interfaces/src"
      ],
      "@app/interfaces/*": [
        "libs/interfaces/src/*"
      ],
      "@app/dtos": [
        "libs/dtos/src"
      ],
      "@app/dtos/*": [
        "libs/dtos/src/*"
      ],
      "@app/global-reponse": [
        "libs/global-reponse/src"
      ],
      "@app/global-reponse/*": [
        "libs/global-reponse/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}